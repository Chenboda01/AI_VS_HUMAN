{
  "extends": "standard",
  "env": {
    "browser": true
  },
  "globals": {
    "GameEngine": "readonly",
    "UIManager": "readonly",
    "GameController": "readonly"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "always-multiline"]
  }
}